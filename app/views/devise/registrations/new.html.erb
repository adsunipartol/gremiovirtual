<div class="box-info modal-content" style="width: 450px; margin: 0 auto;">
	<div class="panel">
		<div class="panel-heading text-center">
			<h2> <strong> Cadastro de Usu√°rio </strong></h2>
		</div>
		
		<div class="panel-body">
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				
				<div class="form-group">
				  	<%= f.label :nome %>
				  	<%= f.text_field :nome, :class => 'form-control', :required => true %>
				</div>
				
				<div class="form-group">
				  	<%= f.label :cpf %>
				  	<%= f.text_field :cpf, :class => 'form-control', :required => true, :id => 'cpf' %>
				</div>
				
			  	<div class="form-group">
				  	<%= f.label :email, 'E-mail' %>
				  	<%= f.email_field :email, :class => 'form-control', :required => true %>
				</div>
				
			  	<div class="form-group">
			  		<%= f.label :password, 'Senha' %>
			    	<%= f.password_field :password, autocomplete: "off", :class => 'form-control', :required => true %>
				</div>
			
			  	<div class="form-group">
			  		<%= f.label :password_confirmation, 'Senha (confirmar)' %>
			    	<%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :required => true %>
				</div>
			  	
			  	<div class="form-group">
					<%= f.submit "Cadastrar", :class => 'btn btn-primary', :style => 'width: 100%' %>
				</div>
			<% end %>	
			
			<%= devise_error_messages! %>
			
			<%= render "devise/shared/links" %>
		</div>
		
	</div>
</div>

<script type="text/javascript">
	$(function() {
		$('#cpf').mask('999.999.999-99');
	});
</script>
