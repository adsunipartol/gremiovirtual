<%= form_for(@comissao_eleitoral) do |f| %>
	<% if @comissao_eleitoral.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@comissao_eleitoral.errors.count, "erro") %></h2>
		
			<ul>
				<% @comissao_eleitoral.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<%= f.hidden_field :gremio_id, :value => current_colegio.gremio.id %>
	
	<div class="actions form-group">
		<%= f.submit :class => 'btn btn-primary' %>
	</div>
<% end %>
